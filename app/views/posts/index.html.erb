
<html>

<body id="post-background">
  

    <!-- Navbar added here by Layouts file -->

    <!-- Now adding Welcome page -->

  <header>
   
   <p id="notice"><%= notice %></p>
    <div class="container">

      <div class="jumbotron">

        <div class="content">

          <h1 class="welcome-style">Welcome to Roadster</h1>

          <h3>Start your journey </h3>

          <% if user_signed_in? %>
         <button class="btn btn-default"> <%= link_to 'Create Your Journey', new_post_path, class: "post-link-style" %></button>
          <% else %>
          <button class="btn btn-default"> <%= link_to "Sign in to create post", new_user_session_path, class: "post-link-style"%></button>
          <% end %> 
        </div>

        

      </div>
      

    </div>
  </header>


    <!-- Add new page that contains posts -->




  <main>
  <div class="container">
    <div class="post-content">
   

    
    <div class="row">
      <div class="col-lg-12">
        <h1>Posts</h1>
            <% @posts.each do |post| %>
              
              <div class="row ">

                <%= post.title %>
                <%= link_to 'Show', post, class: 'edit-link'  %>
                <% if user_signed_in? %>
                <% if current_user.id == post.user_id %>
                <%= link_to 'Edit', edit_post_path(post),class: 'edit-link' %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'edit-link' %>
                <% end %>
                <% end %>
              </div>
                
            <% end %>
              

        <br>

        
        </div>
    </div>

  </div>
</div>

  </div>

</main>
</body>
</html>
