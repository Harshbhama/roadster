
<html>



<body id="post-background">
  

    <!-- Navbar added here by Layouts file -->

    <!-- Now adding Welcome page -->

  <header>
   
   <p id="notice"><%= notice %></p>
    <div class="container">

      <div class="jumbotron">

        <div class="content">

          <h1 class="welcome-style">Welcome to Roadster</h1>

          <h3>Start your journey </h3>

          <% if user_signed_in? %>
         <button class="btn btn-default"> <%= link_to 'Create Your Journey', new_post_path, class: "post-link-style" %></button>
          <% else %>
          <button class="btn btn-default"> <%= link_to "Sign in to create post", new_user_session_path, class: "post-link-style"%></button>
          <% end %> 
        </div>

        

      </div>
      

    </div>
  </header>


    <!-- Add new page that contains posts -->




  <main>
    <div class= "small-index-style">
      <div class="container">
        <div class="post-content">

        
            <div class="row">
                <div class="col-lg-12 "><h1 class="h-post-style">Journeys</h1></div>
              </div>
        
              <div class="row">
                <% @posts.each do |post| %>
                    
                  <div class="grid-padding-style ">
                    <p class="paragh-style-1"><%=post.title %><p>
                      <p class="paragh-style-2">By -- <%= post.user.email %> </p>
                    <div class="col-lg-4 col-sm-6 col-xs-6 col-md-6"><%= image_tag post.avatar.url, class: "image-style"%></div>
                    

                    <br>
                    <div class="show-link">
                    <button type="button" class="btn btn-dark "><%= link_to 'Show', post, class: 'edit-link'  %></button>
                    <% if user_signed_in? %>
                    <% if current_user.id == post.user_id %>
                    <button type="button" class="btn btn-dark"><%= link_to 'Edit', edit_post_path(post),class: 'edit-link' %></button>
                    <button type="button" class="btn btn-dark"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'edit-link' %></button>
                    
               
                    <% end %>
                    <% end %>
                    </div>
                  </div>
                  
                  
                    
                <% end %>
              </div>
                  

            <br>

            
            </div>
        </div>
      </div>
  <div class= "pag-style">
    <%= will_paginate @posts %>
  </div>

</main>
</footer>
</body>
</html>
