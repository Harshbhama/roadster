  <html>
      <body id="login-body">
        <div class="small-login-screen">
          <div class="login-size">
            <div class="container ">

                  <div class="login-content">
                      <h2 class="h-new-style">Sign-up</h2>    

                

                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                
                                <%= devise_error_messages! %>

                                  <div class="form-group">
                                      <div class="field">
                                        <%= f.label :email , class: "t-label-style"  %><br />
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control t-area-style"%>
                                      </div>

                                      <br>

                                      <div class="field">
                                        <%= f.label :password , class: "t-label-style" %>
                                        <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "off" , class: "form-control t-area-style" %>
                                      </div>

                                      <br>

                                      <div class="field">
                                        <%= f.label :password_confirmation , class: "t-label-style" %><br />
                                        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control t-area-style" %>
                                      </div>

                                      <br>

                                      <div class="actions">
                                        <%= f.submit "Sign up" , class: "btn btn-default sbt-new-style"  %>
                                      </div>
                                    </div>
                              <% end %>

                                    <%= render "devise/shared/links" %>
                            
                    </div>
              </div>
            </div>
        </div>
  </body>
</html>