<html>
  <body id="login-body">
    <div class="login-size">
      <div class="container ">

        <div class="login-content">
            <h2 class="h-new-style">Log in</h2>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                 <div class="form-group"> 
                    <div class="field">
                      <%= f.label :email, class: "t-label-style" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control t-area-style" %>
                    </div>

                    <br>

                    <div class="field">
                      <%= f.label :password, class: "t-label-style" %><br />
                      <%= f.password_field :password, autocomplete: "off", class: "form-control t-area-style"  %>
                    </div>
                    <br>

                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class: "r-label-style" %>
                      </div>
                    <% end -%>

                    <div class="actions">
                      <%= f.submit "Log in", class: "btn btn-default sbt-new-style" %>
                    </div>
                  </div>

              <% end %>

              <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </body>
</html>
